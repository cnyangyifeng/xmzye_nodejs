@import '../../assets/styles/animate.wxss';

/****************************************************************************************************/

.login-btn {
  flex: none;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100px;
  margin-bottom: 100px;
  padding: 16px;
  box-sizing: border-box;
  border-radius: 50%;
  background-color: #00ba80;
  color: #fff;
  font-size: 18px;
  line-height: 28px;
}

.login-btn-hover {
  background-color: #0c9;
}

/****************************************************************************************************/

.nav-bar {
  position: absolute;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  width: 100vw;
  background: linear-gradient(rgba(32, 44, 58, 1.0), rgba(32, 44, 58, 0.8));
}

.quiz-user-hd {
  flex: 1;
  display: flex;
  align-items: center;
  height: 120rpx;
}

.quiz-user-avatar {
  flex: none;
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx;
  border-radius: 50%;
}

.quiz-user-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.quiz-user-vip {
  flex: none;
  width: 24px;
  height: 24px;
  margin-right: 10rpx;
}

.quiz-user-nick-name {
  flex: none;
  color: #fff;
  max-width: 260rpx;
  margin-right: 30rpx;
  font-size: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.quiz-user-asset {
  flex: none;
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-radius: 40rpx;
  border: 1px solid #666;
  background-color: #282828;
}

.quiz-user-asset-hover {
  background-color: #666;
}

.quiz-user-asset-icon {
  width: 40rpx;
  height: 40rpx;
}

.quiz-user-asset-icon.left {
  margin-left: 20rpx;
}

.quiz-user-asset-icon.right {
  margin-right: 20rpx;
}

.quiz-user-asset-value {
  max-width: 260rpx;
  margin: 0 20rpx;
  color: #fff;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.quiz-tabs {
  flex: none;
  display: flex;
  width: 710rpx;
  margin: 20rpx;
}

.quiz-tabs-innner {
  flex: 1;
  display: flex;
  align-items: center;
  width: 710rpx;
  white-space: nowrap;
}

.quiz-tab {
  flex: none;
  display: inline-block;
  min-width: 80px;
  height: 80rpx;
  margin-right: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1px solid #666;
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 80rpx;
}

.quiz-tab.active {
  border: 1px solid #00ba80;
  background-color: #00ba80;
}

.quiz-tab-hover {
  border: 1px solid #00ba80;
  background-color: #00ba80;
}

/****************************************************************************************************/

.home {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  margin: 0;
  background-color: #202c3a;
}

.quiz-grid {
  display: flex;
  width: 100vw;
  height: 100vh;
  margin: 0;
  background-color: #202c3a;
}

.quiz-grid-inner {
  flex: none;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 750rpx;
  margin-top: 240rpx;
  padding-bottom: 10rpx;
}

.quiz-card {
  position: relative;
  flex: none;
  display: flex;
  width: 174rpx;
  height: 174rpx;
  margin: 5rpx;
  box-sizing: border-box;
  border: 10rpx solid #ccc;
  background-color: #fff;
}

.quiz-card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 157rpx;
  height: 157rpx;
  opacity: 0.3;
}

.quiz-card-ok {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.quiz-card-lock {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 48rpx;
  height: 48rpx;
}

.quiz-card-title {
  display: flex;
  margin: 16rpx 0 0 16rpx;
  color: #202c3a;
  font-size: 18px;
}

.home-foot {
  flex: none;
  display: flex;
  justify-content: center;
  padding: 80rpx 0 320rpx 0;
  color: #666;
  font-size: 16px;
}

/****************************************************************************************************/

/* .rankings */

.rankings {
  position: absolute;
  z-index: 1000;
  right: 20px;
  bottom: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-radius: 50rpx;
  background-color: #00ba80;
}

.rankings-hover {
  background-color: #0c9;
}

.rankings-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background-color: #0c9;
}

.rankings-btn-image {
  width: 60rpx;
  height: 60rpx;
}

.rankings-text {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 50rpx 0 20rpx;
  color: #fff;
  font-size: 16px;
}

.rankings-value {
  margin-left: 20rpx;
  font-size: 20px;
}
