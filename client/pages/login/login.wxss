@import '../../assets/styles/animate.wxss';

/****************************************************************************************************/

.login {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  margin: 0;
}

.login-bg {
  position: absolute;
  z-index: -1000;
  display: flex;
  width: 100%;
  height: 100%;
  will-change: transform;
}

.login-title {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24px;
}

.login-bar {
  position: absolute;
  z-index: 1000;
  bottom: 40rpx;
  display: flex;
}

.login-primary-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80vw;
  height: 100rpx;
  box-sizing: border-box;
  border-radius: 100rpx;
  background-color: #00ba80;
  color: #fff;
  font-size: 16px;
  animation-name: zoomIn;
  animation-duration: 0.4s;
  animation-timing-function: ease-in-out;
  animation-fill-mode: both;
}

.login-primary-btn.disabled {
  background-color: #0c9;
}
